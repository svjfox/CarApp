@model CarApp.Core.Entities.Car

<h2>Create a New Car</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Make">Make</label>
        <input type="text" id="Make" name="Make" value="@Model.Make" />
    </div>
    <div>
        <label for="Model">Model</label>
        <input type="text" id="Model" name="Model" value="@Model.Model" />
    </div>
    <div>
        <label for="Year">Year</label>
        <input type="number" id="Year" name="Year" value="@Model.Year" />
    </div>
    <div>
        <label for="Color">Color</label>
        <input type="text" id="Color" name="Color" value="@Model.Color" />
    </div>
    <button type="submit">Create</button>
</form>
