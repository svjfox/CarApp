<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="CarApp" />
    <meta name="author" content="CarApp" />
    <title>@ViewData["Title"] - CarApp</title>

    <!-- Иконка сайта -->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Подключение Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Подключение Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700|Open+Sans:300,400,600,700" rel="stylesheet" />

    <!-- Подключение Bootstrap и стилей -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">CarApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link fw-bold" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link fw-bold" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li class="nav-item"><a class="nav-link fw-bold" asp-controller="Cars" asp-action="Index">Car</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Шапка страницы -->
    <header class="masthead" style="background-image: url('assets/img/car-banner.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>CarApp</h1>
                        <span class="subheading fw-bold">Лучшие автомобили для вас</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Основной контент -->
    <div class="container px-4 px-lg-5 mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Футер -->
    <footer class="border-top mt-auto">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="small text-center text-muted fst-italic">&copy; 2025 - CarApp</div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Подключение Bootstrap и скриптов -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
