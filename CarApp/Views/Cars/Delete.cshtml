@model CarApp.Core.Dto.CarDto

@{
    ViewData["Title"] = "Delete Car";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete this car?</p>

<table class="table">
    <tr>
        <th>Model</th>
        <td>@Model.Model</td>
    </tr>
    <tr>
        <th>Manufacturer</th>
        <td>@Model.Manufacturer</td>
    </tr>
    <tr>
        <th>Year</th>
        <td>@Model.Year</td>
    </tr>
    <tr>
        <th>Color</th>
        <td>@Model.Color</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Model" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Cars")" class="btn btn-secondary">Cancel</a>
</form>
