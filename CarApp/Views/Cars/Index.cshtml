@model IEnumerable<CarApp.Core.Dto.CarDto>

@{
    ViewData["Title"] = "Cars List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Model</th>
            <th>Manufacturer</th>
            <th>Year</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Model</td>
                <td>@car.Manufacturer</td>
                <td>@car.Year</td>
                <td>@car.Color</td>
                <td>
                    <a href="@Url.Action("Details", "Cars", new { id = car.Model })">Details</a> |
                    <a href="@Url.Action("Edit", "Cars", new { id = car.Model })">Edit</a> |
                    <a href="@Url.Action("Delete", "Cars", new { id = car.Model })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Cars")" class="btn btn-primary">Add New Car</a>
